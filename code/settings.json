{
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.defaultFormatter": "vscode.markdown-language-features"
  },
  "[plaintext]": {
    "editor.wordWrap": "bounded"
  },
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "better-comments.tags": [
    {
      "backgroundColor": "transparent",
      "bold": false,
      "color": "#FF2D00",
      "italic": false,
      "strikethrough": false,
      "tag": "!",
      "underline": false
    },
    {
      "backgroundColor": "transparent",
      "bold": false,
      "color": "#3498DB",
      "italic": false,
      "strikethrough": false,
      "tag": "?",
      "underline": false
    },
    {
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false,
      // "color": "#474747",
      "strikethrough": false,
      "tag": "//",
      "underline": false
    },
    {
      "backgroundColor": "transparent",
      "bold": false,
      "color": "#FF8C00",
      "italic": false,
      "strikethrough": false,
      "tag": "todo",
      "underline": false
    },
    {
      "backgroundColor": "transparent",
      "bold": false,
      "color": "#98C379",
      "italic": false,
      "strikethrough": false,
      "tag": "*",
      "underline": false
    }
  ],
  "cSpell.enableFiletypes": ["!typescript"],
  "cSpell.enabled": false,
  "cSpell.language": "en-GB",
  "cSpell.userWords": ["anymore"],
  "clock.format": "HH:MM",
  "clock.iconName": "disabled",
  "diffEditor.renderSideBySide": false,
  "editor.accessibilitySupport": "off",
  "editor.bracketPairColorization.enabled": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.fixAll.sortJSON": false
  },
  "editor.cursorBlinking": "solid",
  "editor.cursorStyle": "block",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.dragAndDrop": false,
  "editor.fontFamily": "'JetBrains Mono', monospace",
  "editor.fontLigatures": true,
  "editor.formatOnSave": true,
  "editor.lineHeight": 1.1,
  "editor.lineNumbers": "on",
  "editor.linkedEditing": true,
  "editor.minimap.enabled": false,
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.renderControlCharacters": false,
  "editor.rulers": [80],
  "editor.scrollbar.horizontalScrollbarSize": 8,
  "editor.scrollbar.verticalScrollbarSize": 8,
  "editor.suggestSelection": "first",
  "editor.tabSize": 2,
  "editor.wrappingIndent": "indent",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.decorations.colors": false,
  "explorer.sortOrder": "mixed",
  "extensions.ignoreRecommendations": true,
  "files.defaultLanguage": "${activeEditorLanguage}",
  "files.exclude": {
    "**/*.meta": true,
    "**/*.tsbuildinfo": true,
    "**/.classpath": true,
    "**/.factorypath": true,
    "**/.project": true,
    "**/.rollup*": true,
    "**/.settings": true,
    "**/__pycache__/": true,
    "**/node_modules": true
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.watcherExclude": {
    "**/dist": true
  },
  "git-graph.dialog.fetchRemote.prune": true,
  "git-graph.dialog.fetchRemote.pruneTags": true,
  "git-graph.maxDepthOfRepoSearch": 1,
  "git-graph.repository.fetchAndPrune": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.countBadge": "off",
  "git.suggestSmartCommit": false,
  "github.gitAuthentication": false,
  "gitlens.codeLens.enabled": false,
  "gitlens.currentLine.pullRequests.enabled": false,
  "gitlens.statusBar.enabled": false,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "jest.debugCodeLens.showWhenTestStateIn": ["pass", "skip", "fail", "unknown"],
  "jestrunner.disableCodeLens": true,
  "js/ts.implicitProjectConfig.strictNullChecks": true,
  "keyboard.dispatch": "keyCode",
  "liveServer.settings.donotShowInfoMsg": true,
  "macros": {
    "editorCursorMoveAndScrollDown5": [
      {
        "args": {
          "by": "line",
          "to": "down",
          "value": 5
        },
        "command": "cursorMove"
      },
      {
        "args": {
          "by": "line",
          "to": "down",
          "value": 5
        },
        "command": "editorScroll"
      }
    ],
    "editorCursorMoveAndScrollUp5": [
      {
        "args": {
          "by": "line",
          "to": "up",
          "value": 5
        },
        "command": "cursorMove"
      },
      {
        "args": {
          "by": "line",
          "to": "up",
          "value": 5
        },
        "command": "editorScroll"
      }
    ]
  },
  "markdown.preview.linkify": false,
  "npm.fetchOnlinePackageInfo": false,
  "nxConsole.enableTelemetry": false,
  "php.validate.enable": false,
  "search.exclude": {
    "**/dist*": true
  },
  "search.searchOnTypeDebouncePeriod": 400,
  "security.workspace.trust.untrustedFiles": "open",
  "svelte.enable-ts-plugin": true,
  "tailwindCSS.includeLanguages": {
    "typescript": "javascript"
  },
  "telemetry.telemetryLevel": "off",
  "terminal.integrated.allowChords": false,
  "terminal.integrated.altClickMovesCursor": false,
  "terminal.integrated.confirmOnExit": "hasChildProcesses",
  "terminal.integrated.defaultProfile.linux": "zsh",
  "terminal.integrated.enableFileLinks": false,
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.tabs.enabled": false,
  "terminal.integrated.windowsEnableConpty": false,
  "typescript.disableAutomaticTypeAcquisition": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.workspaceSymbols.scope": "currentProject",
  "update.mode": "manual",
  "vscodeRandom.contextMenu.enabled": false,
  "vscode_custom_css.imports": [
    "file:///home/bear/untracked/dotfiles/code/custom.css"
  ],
  "window.menuBarVisibility": "toggle",
  "window.newWindowDimensions": "inherit",
  "window.titleBarStyle": "custom",
  "workbench.activityBar.visible": false,
  "workbench.colorCustomizations": {
    "editor.background": "#2e3436",
    "editor.foreground": "#aaaaad",
    "editor.lineHighlightBackground": "#c0c0c019",
    // selection
    "editor.selectionBackground": "#c0c0c040",
    // bracket pair colours
    "editorBracketHighlight.foreground1": "#dfb976",
    "editorBracketHighlight.foreground2": "#c172d9",
    "editorBracketHighlight.foreground3": "#5caeef",
    "editorBracketHighlight.foreground4": "#97c26c",
    "editorBracketHighlight.foreground5": "#abb2c0",
    "editorBracketHighlight.unexpectedBracket.foreground": "#db6165",
    // cursor
    "editorCursor.foreground": "#c0c0c0",
    "editorError.background": "#db61652f",
    // error/warning/info underlines
    "editorError.foreground": "#0000",
    "editorInfo.background": "#5caeef2f",
    "editorInfo.foreground": "#0000",
    "editorWarning.background": "#dfb9762f",
    "editorWarning.foreground": "#0000",
    "sideBar.background": "#2b2f31",
    "statusBar.background": "#2b2f31",
    "statusBar.debuggingBackground": "#b64144",
    // statusbar
    "statusBar.foreground": "#c0c0c0",
    // tabs
    "tab.activeBorder": "#97c26c",
    "terminal.background": "#2b2f31"
  },
  "workbench.colorTheme": "Minimal Colors",
  "workbench.editor.focusRecentEditorAfterClose": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.editor.pinnedTabSizing": "compact",
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.titleScrollbarSizing": "large",
  "workbench.editor.untitled.hint": "hidden",
  "workbench.enableExperiments": false,
  "workbench.iconTheme": "chalice-icon-theme",
  "workbench.list.keyboardNavigation": "filter",
  "workbench.settings.enableNaturalLanguageSearch": false,
  "workbench.startupEditor": "newUntitledFile",
  "workbench.tips.enabled": false,
  "zenMode.centerLayout": false,
  "zenMode.hideStatusBar": false,
  "zenMode.hideTabs": false,
  "zenMode.restore": false
}
